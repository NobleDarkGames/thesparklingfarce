{
  "cinematic_id": "no_starting_scene_error",
  "cinematic_name": "No Starting Scene",
  "description": "Core fallback cinematic shown when no starting scene is configured.",
  "can_skip": true,
  "disable_player_input": true,

  "commands": [
    {
      "type": "fade_screen",
      "params": {
        "fade_type": "in",
        "duration": 1.0
      }
    },
    {
      "type": "wait",
      "params": {
        "duration": 0.3
      }
    },
    {
      "type": "dialog_line",
      "params": {
        "speaker_name": "System",
        "text": "No starting scene configured! A starting scene is required to start a new game.",
        "emotion": "neutral"
      }
    },
    {
      "type": "dialog_line",
      "params": {
        "speaker_name": "System",
        "text": "To configure your mod, create a NewGameConfig resource in the Sparkling Editor.",
        "emotion": "neutral"
      }
    },
    {
      "type": "dialog_line",
      "params": {
        "speaker_name": "System",
        "text": "Set the 'Starting Scene Path' to your mod's first map scene.",
        "emotion": "neutral"
      }
    },
    {
      "type": "wait",
      "params": {
        "duration": 0.5
      }
    },
    {
      "type": "fade_screen",
      "params": {
        "fade_type": "out",
        "duration": 1.0
      }
    }
  ]
}
