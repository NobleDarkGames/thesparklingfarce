[gd_resource type="Resource" script_class="AbilityData" load_steps=2 format=3]

; ============================================================================
; EXAMPLE ABILITY: Cure
; ============================================================================
; Abilities are skills and spells that characters can use in battle.
; They can deal damage, heal, apply buffs/debuffs, or have special effects.
;
; ABILITY TYPES:
; 0 = ATTACK: Deals damage to targets
; 1 = HEAL: Restores HP to targets
; 2 = SUPPORT: Buffs allies (attack up, defense up, etc.)
; 3 = DEBUFF: Weakens enemies (poison, slow, etc.)
; 4 = SPECIAL: Unique effects (teleport, summon, etc.)
;
; TARGET TYPES:
; 0 = SINGLE_ENEMY: One enemy unit
; 1 = SINGLE_ALLY: One friendly unit
; 2 = SELF: The caster only
; 3 = ALL_ENEMIES: Every enemy on the field
; 4 = ALL_ALLIES: Every ally on the field
; 5 = AREA: Targets within area_of_effect of a chosen tile
; ============================================================================

[ext_resource type="Script" path="res://core/resources/ability_data.gd" id="1_ability"]

[resource]
script = ExtResource("1_ability")

; --- IDENTITY ---
ability_name = "Cure"
description = "Restores HP to one ally. A fundamental healing spell for any healer."

; --- TYPE AND TARGETING ---
; ability_type: 0=ATTACK, 1=HEAL, 2=SUPPORT, 3=DEBUFF, 4=SPECIAL
ability_type = 1

; target_type: 0=SINGLE_ENEMY, 1=SINGLE_ALLY, 2=SELF, 3=ALL_ENEMIES, 4=ALL_ALLIES, 5=AREA
target_type = 1

; --- RANGE AND AREA ---
; min_range: Minimum distance (0 = can target self/adjacent)
; max_range: Maximum distance (1 = adjacent only, higher = ranged)
; For heals, min_range = 0 allows self-healing
min_range = 0
max_range = 2

; area_of_effect: Radius of splash effect (0 = single target)
; Used when target_type is AREA or for splash damage
area_of_effect = 0

; --- COST ---
; mp_cost: Magic points required to cast
; hp_cost: Health points sacrificed (for blood magic style abilities)
mp_cost = 3
hp_cost = 0

; --- POWER AND ACCURACY ---
; power: Base effectiveness (healing amount for heals, damage for attacks)
; Formula is typically: final_effect = power + (intelligence * 0.5)
power = 15

; accuracy: Percentage chance to succeed (100 = always hits)
; Healing abilities are typically 100% accurate
accuracy = 100

; --- STATUS EFFECTS ---
; status_effects: Array of status effect IDs to apply
; Examples: "poison", "paralysis", "attack_up", "defense_down"
status_effects = Array[String]([])

; effect_duration: How many turns the status effect lasts
effect_duration = 0

; effect_chance: Percentage chance to apply the status effect
effect_chance = 0

; --- ANIMATION ---
; animation_name: Animation to play when ability is used
; These are registered in the game's animation system
animation_name = "heal_sparkle"
