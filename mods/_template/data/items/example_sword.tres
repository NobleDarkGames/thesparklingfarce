[gd_resource type="Resource" script_class="ItemData" load_steps=2 format=3]

; ============================================================================
; EXAMPLE ITEM: Iron Sword
; ============================================================================
; Items can be weapons, armor, consumables, or key items.
; Equipment provides stat bonuses and may have special effects.
; Consumables trigger abilities when used.
;
; ITEM TYPES:
; 0 = WEAPON: Equippable, provides attack power
; 1 = ARMOR: Equippable, provides defense
; 2 = CONSUMABLE: Single-use items (potions, herbs)
; 3 = KEY_ITEM: Quest items, not consumable or equippable
; 4 = ACCESSORY: Equippable in accessory slot
;
; EQUIPMENT TYPES:
; For weapons: sword, axe, spear, bow, staff, knife, blade, mace
; For armor: light, medium, heavy, robe
; These must match the types a class can equip!
; ============================================================================

[ext_resource type="Script" path="res://core/resources/item_data.gd" id="1_item"]

[resource]
script = ExtResource("1_item")

; --- IDENTITY ---
item_name = "Iron Sword"
description = "A reliable sword forged from quality iron. Standard issue for soldiers."

; --- TYPE CONFIGURATION ---
; item_type: 0=WEAPON, 1=ARMOR, 2=CONSUMABLE, 3=KEY_ITEM, 4=ACCESSORY
item_type = 0

; equipment_type: Must match a type the character's class can equip
; For weapons: sword, axe, spear, bow, staff, knife, blade, mace
equipment_type = "sword"

; equipment_slot: Which slot this goes in (weapon, armor, accessory)
; Usually inferred from item_type, but can be explicit
equipment_slot = "weapon"

; --- STATS (for equipment) ---
; attack_power: Weapon damage bonus (only for weapons)
attack_power = 8

; attack_range: How far the weapon can hit. 1 = melee, 2+ = ranged
attack_range = 1

; defense_power: Armor defense bonus (only for armor)
defense_power = 0

; --- STAT MODIFIERS (for equipment) ---
; These apply when the item is equipped. Can be negative for cursed items.
hp_modifier = 0
mp_modifier = 0
strength_modifier = 0
defense_modifier = 0
agility_modifier = 0
intelligence_modifier = 0
luck_modifier = 0

; --- CURSED ITEMS ---
; Cursed items cannot be unequipped normally and often have drawbacks
is_cursed = false

; --- CONSUMABLE SETTINGS ---
; Only relevant for item_type = 2 (CONSUMABLE)
; usable_in_battle: Can be used during combat
; usable_on_field: Can be used from the menu outside combat
usable_in_battle = false
usable_on_field = false

; effect: Reference to an AbilityData that triggers when consumed
; effect = null

; --- ECONOMY ---
; buy_price: Cost to purchase from shops (0 = not for sale)
; sell_price: Gold received when selling (typically 50% of buy_price)
buy_price = 100
sell_price = 50

; --- VISUALS ---
; icon: Texture2D for inventory display (typically 16x16 or 32x32)
; icon = null
